{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Vibe Chat)",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "Dev: All",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/extension"],
      "outFiles": ["${workspaceFolder}/packages/extension/dist/**/*.cjs"]
    },
    {
      "name": "Run Extension (Vibe Chat, Isolated)",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "Dev: All",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
      ],
      "outFiles": ["${workspaceFolder}/packages/extension/dist/**/*.cjs"]
    },
    {
      "name": "Run Extension (Vibe Chat, Isolated + Trace Warnings)",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "Dev: All",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
      ],
      "env": {
        "VSCODE_NODE_OPTIONS": "--trace-warnings --trace-deprecation"
      },
      "outFiles": ["${workspaceFolder}/packages/extension/dist/**/*.cjs"]
    }
  ]
}
