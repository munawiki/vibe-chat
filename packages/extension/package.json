{
  "name": "vibe-chat",
  "displayName": "Vibe Chat",
  "description": "A single shared chat room for VS Code using GitHub sign-in.",
  "version": "0.0.5",
  "private": false,
  "license": "Apache-2.0",
  "publisher": "munawiki",
  "repository": {
    "type": "git",
    "url": "https://github.com/munawiki/vibe-chat.git"
  },
  "homepage": "https://github.com/munawiki/vibe-chat",
  "bugs": {
    "url": "https://github.com/munawiki/vibe-chat/issues"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon.png",
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onView:vscodeChat.chatView",
    "onCommand:vscodeChat.openChat",
    "onCommand:vscodeChat.signIn"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscodeChat.openChat",
        "title": "Vibe Chat: Open"
      },
      {
        "command": "vscodeChat.signIn",
        "title": "Vibe Chat: Sign in with GitHub"
      }
    ],
    "configuration": {
      "title": "Vibe Chat",
      "properties": {
        "vscodeChat.backendUrl": {
          "type": "string",
          "default": "https://vscode-chat.munawiki.workers.dev",
          "description": "Backend base URL (e.g., https://<worker>.workers.dev)."
        },
        "vscodeChat.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Auto-connect when the chat view is opened."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscodeChat",
          "title": "Vibe Chat",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "vscodeChat": [
        {
          "id": "vscodeChat.chatView",
          "name": "Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "build": "node ./esbuild.mjs",
    "watch": "node ./esbuild.mjs --watch",
    "lint": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.webview.json --noEmit",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@speed-highlight/core": "^1.2.12",
    "@vscode-chat/protocol": "workspace:*",
    "linkify-it": "^5.0.0",
    "tweetnacl": "^1.0.3",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/linkify-it": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.90.0",
    "@types/ws": "^8.5.12",
    "esbuild": "^0.27.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.16"
  }
}
